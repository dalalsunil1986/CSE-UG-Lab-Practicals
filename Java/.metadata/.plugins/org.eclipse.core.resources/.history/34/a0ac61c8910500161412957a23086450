import java.util.*;

public class jumpGame {
	/*Given an array of non-negative integers, you are initially positioned at the first index of the array.
		Each element in the array represents your maximum jump length at that position.
		Determine if you are able to reach the last index*/
	
	public boolean canreach(int i, int end, ArrayList<Integer>a){
		System.out.println("i: " + i);
		for (int j = 1; j <= a.get(i); j++){
			if (i + j >= end)
				break;
			else if (i + j == end - 1)
				return true;
			else
				return canreach(i + j, end, a);
		}
		return false;
	}
	
	public int canJump(ArrayList<Integer> a) {
		
		return canreach(0, a.size(), a) ? 1 : 0;
		
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println(new jumpGame().canJump(new ArrayList<Integer>(Arrays.asList(2, 3, 1, 1, 4))));
	}

}
