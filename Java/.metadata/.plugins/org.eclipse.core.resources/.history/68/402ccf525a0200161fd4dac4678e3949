import java.lang.*;
import java.util.*;
import java.io.*;

public class coinSum {

	
	public int coinchange2(ArrayList<Integer> a, int b) {
		int mod = 1000007;
		
		ArrayList<Integer> T = new ArrayList<>();
		for (int i = 0; i <= b; i++)
			T.add(i, 0);
		
		T.set(0, 1);
		int c = 20;
		
		for (int i = 0; i < a.size(); i++){
			for (int j = a.get(i); j <= b; j++)
				T.set(j, (T.get(j) + T.get(j - a.get(i))) % mod);
		}
		
		return T.get(b);
    }
	
	public static void main(String[] args) throws NumberFormatException, IOException {
		
		ArrayList<Integer> t = new ArrayList<>(Arrays.asList(1, 2, 3));
		System.out.println(new coinSum().coinchange2(t, 4));
	}

}
